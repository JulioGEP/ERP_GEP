{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./functions/*", "./*"]
    }
  },
  "include": ["functions/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/__tests__/**"]
}
