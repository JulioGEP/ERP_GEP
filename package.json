{
  "name": "erp_gep_monorepo",
  "private": true,
  "version": "1.0.3",
  "engines": {
    "node": ">=20.18.0",
    "npm": ">=10.8.0"
  },
  "scripts": {
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:functions": "echo \"Functions bundled by Netlify\"",
    "generate": "prisma generate",
    "postinstall": "prisma generate",
    "db:init": "dotenv -e .env -- node scripts/init-db.mjs",
    "typecheck:functions": "tsc -p backend/tsconfig.json",
    "netlify:build": "npm run generate && npm run build",
    "dev": "echo \"Dev local: usa 'npx netlify dev -p 8888' si tienes Netlify CLI disponible\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/s3-request-presigner": "^3.901.0",
    "@prisma/client": "^6.16.3"
  },
  "devDependencies": {
    "@types/node": "^20.19.19",
    "dotenv-cli": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.3",
    "typescript": "^5.9.3"
  },
  "prisma": { 
    "schema": "prisma/schema.prisma" }
}

