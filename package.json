{
  "name": "erp_gep_monorepo",
  "private": true,
  "version": "1.0.9",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.8.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules .prisma",
    "build": "npm run build:frontend",
    "prebuild:frontend": "if [ ! -x frontend/node_modules/.bin/vite ]; then npm install --prefer-offline --include=dev --include-workspace-root --workspaces; fi",
    "build:frontend": "npm run build --workspace frontend",
    "netlify:build": "npm --prefix backend run migrate:deploy && npm --prefix backend run generate && npm --prefix backend run prisma:prune && npm run build",
    "dev": "echo \"Dev local: usa 'npx netlify dev -p 8888' si tienes Netlify CLI disponible\"",
    "prisma:format": "backend/node_modules/.bin/prisma format --schema backend/prisma/schema.prisma",
    "prisma:generate": "npm --prefix backend run generate",
    "typecheck:functions": "npm --prefix backend run typecheck"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/s3-request-presigner": "^3.901.0",
    "@prisma/client": "^5.22.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@netlify/functions": "^4.2.7",
    "@types/node": "^20.19.19",
    "dotenv-cli": "^10.0.0",
    "netlify-cli": "^17.38.1",
    "pino-pretty": "^13.1.1",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "entities": "^6.0.0",
    "whatwg-url": "^14.0.0"
  },
  "overrides": {
    "jsdom": {
      "whatwg-url": "^14.0.0"
    },
    "parse5": {
      "entities": "^6.0.0"
    }
  },
  "prisma": {
    "schema": "backend/prisma/schema.prisma"
  }
}
