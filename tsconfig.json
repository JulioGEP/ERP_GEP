{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["netlify/functions/**/*.ts"],
  "exclude": ["node_modules", "backend/**", "frontend/**/node_modules", "dist", "build"]
}
